{{!
    @template theme_holland/frontpage

    Holland frontpage layout template.

    No course index or block drawers are used. Two block regions are rendered
    inline: fp-before (before region-main) and fp-after (after region-main).

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * fpbeforeblocks - HTML for the fp-before block region
    * hasfpbeforeblocks - true if there are blocks in fp-before
    * fpafterblocks - HTML for the fp-after block region
    * hasfpafterblocks - true if there are blocks in fp-after
    * holland - Object with hasfeaturedcourses and featuredcourses

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
        },
        "bodyattributes": "",
        "fpbeforeblocks": "",
        "hasfpbeforeblocks": false,
        "fpafterblocks": "",
        "hasfpafterblocks": false,
        "addblockbutton": "",
        "holland": {
            "hasfeaturedcourses": false,
            "featuredcourses": []
        }
    }
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}
<div id="page-wrapper" class="d-print-block">

    {{{ output.standard_top_of_body_html }}}

    {{> theme_boost/navbar }}

    <div id="page" data-region="mainpage" data-usertour="scroller" class="drawers frontpage-layout drag-container">
        <div id="topofscroll" class="main-inner">

            {{{ output.full_header }}}

            <div id="page-content" class="pb-3 d-print-block">

                {{#hasfpbeforeblocks}}
                <div id="frontpage-blocks-before" class="frontpage-blocks mb-3">
                    {{{ fpbeforeblocks }}}
                </div>
                {{/hasfpbeforeblocks}}

                <div id="region-main-box">
                    <div id="region-main">
                        {{{ output.course_content_header }}}
                        {{#headercontent}}
                            {{> core/activity_header }}
                        {{/headercontent}}
                        {{{ output.main_content }}}
                        {{{ output.course_content_footer }}}
                    </div>
                </div>

                {{> theme_holland/theme/frontpage/featuredcourses }}

                {{#hasfpafterblocks}}
                <div id="frontpage-blocks-after" class="frontpage-blocks mt-3">
                    {{{ fpafterblocks }}}
                </div>
                {{/hasfpafterblocks}}

                {{#addblockbutton}}
                <div class="d-print-none mt-3">
                    {{{ addblockbutton }}}
                </div>
                {{/addblockbutton}}

            </div>
        </div>
        {{> theme_boost/footer }}
    </div>
    {{{ output.standard_after_main_region_html }}}
</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function(Loader) {
    M.util.js_complete('theme_boost/loader');
});
{{/js}}
