{{!
    @template theme_holland/theme/frontpage/featuredcourses

    Featured courses grid for the frontpage.

    Context variables required for this template:
    * holland.hasfeaturedcourses - Whether featured courses are enabled and available
    * holland.featuredcourses - Array of course objects with title, description, imgurl, url

    Example context (json):
    {
        "holland": {
            "hasfeaturedcourses": true,
            "featuredcourses": [
                {
                    "imgurl": "https://example.com/course1.jpg",
                    "title": "Course 1",
                    "description": "This is a description of course 1",
                    "url": "https://example.com/course/view.php?id=5"
                }
            ]
        }
    }
}}
{{#holland.hasfeaturedcourses}}
<div id="featuredcourses" class="card-grid-container mb-5 mx-2">
    <h2 class="">{{#str}}featuredcourses, theme_holland{{/str}}</h2>
    <div class="card-grid">
        {{#holland.featuredcourses}}
        <div class="card card-stijl dashboard-card">
            <div class="dashboard-card-img" style="background-image: url('{{{imgurl}}}'); height: 10rem;"></div>
            <div class="card-body">
                <h5 class="card-title">{{{title}}}</h5>
                <p class="card-text">{{#shortentext}}250, {{{description}}} {{/shortentext}}</p>
            </div>
            <div class="card-footer roundedbottom">
                <a href="{{{url}}}" class="btn btn-yellow stretched-link">{{#str}}continue{{/str}}</a>
            </div>
        </div>
        {{/holland.featuredcourses}}
    </div>
</div>
{{/holland.hasfeaturedcourses}}
