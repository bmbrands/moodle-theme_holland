{{!
    @template theme_holland/theme/course_header

    Example context (json):
    {
        "courseid": 1,
        "courseimage": "http://localhost/moodle/theme/image.php/boost/core/1610137878/f/pdf-24",
        "pagename": "Course name",
        "coursesummary": "Course summary",
        "navbar": "<nav>...</nav>",
        "pageheadingbutton": "<button>...</button>",
        "canedit": true,
        "contextid": 1
    }
}}
<div id="page-header" {{#courseimage}} class="py-3" {{/courseimage}}>
    <div id="page-header-container" class="container-fluid p-0">
        <div class="d-flex flex-wrap">
            <div id="page-navbar">
                {{{navbar}}}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 order-lg-last text-center">
                {{#courseimage}}
                    <div class="mb-3 course-header-image position-relative">
                        <img class="img-fluid rounded" alt="" src="{{{courseimage}}}">
                        {{#canedit}}
                        <button class="btn btn-icon icon-no-margin course-image-edit-button"
                            data-action="course-image-edit-form"
                            data-courseid="{{courseid}}">
                            {{#pix}} e/insert_edit_image, core {{/pix}}
                        </button>
                        {{/canedit}}
                    </div>
                {{/courseimage}}
                <div class="d-flex align-items-center justify-content-end">
                    {{{pageheadingbutton}}}
                </div>
                <div class="header-actions-container ms-auto" data-region="header-actions-container">
                    {{#headeractions}}
                        <div class="header-action ms-2">{{{.}}}</div>
                    {{/headeractions}}
                </div>
            </div>

            <div class="col">
                <div id="page-header-content">
                    {{! Title. }}
                    {{#pagename}}
                    <h1 id="page-header-title" class="align-self-start d-inline-block">
                        {{{pagename}}}
                    </h1>
                    {{/pagename}}
                    {{! Summary. }}
                    {{#coursesummary}}
                    <div id="page-header-summary">
                        {{{coursesummary}}}
                    </div>
                    {{/coursesummary}}
                </div>
            </div>
        </div>
    </div>
</div>
{{#js}}
require(['theme_holland/course_image_form', 'theme_holland/featurecourse'], function(courseImageForm, featurecourse) {
    courseImageForm.init();
    featurecourse.init({{courseid}});
});
{{/js}}
