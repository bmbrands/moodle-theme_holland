{{!
    @template theme_holland/theme/featurebutton

    Example context (json):
    {
        "featuring": false,
        "featured": true
    }
}}

{{#featuring}}
    <button class="btn btn-sm btn-feature-disabled btn-warning" disabled>
        {{#pix}}i/progressbar, moodle{{/pix}}
        {{#str}}featuring, theme_holland{{/str}}
    </button>
{{/featuring}}
{{^featuring}}
    {{#featured}}
        <button class="btn btn-sm btn-feature btn-success">
            {{#pix}}t/check, moodle{{/pix}}
            {{#str}}featured, theme_holland{{/str}}
        </button>
    {{/featured}}
    {{^featured}}
        <button class="btn btn-sm btn-feature btn-secondary">
            {{#pix}}i/star, moodle{{/pix}}
            {{#str}}feature, theme_holland{{/str}}
        </button>
    {{/featured}}
{{/featuring}}
